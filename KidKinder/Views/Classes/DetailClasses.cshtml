@using KidKinder.Models.Entities
@model List<ClassRoom>

@{
    ViewBag.Title = "DetailClasses";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<link rel="stylesheet" href="~/Template/KidAdmin/assets/css/Form1.css" />
<h2>Sınıf Detayları</h2>

<table>
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Yaş Aralığı</th>
        <th>Toplam Ders</th>
        <th>Ders Saati</th>
        <th>Ücret</th>
        <th>Resim</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.AgeOfKids</td>
            <td>@item.TotalSeat</td>
            <td>@item.ClassTime</td>
            <td>@item.Price</td>
            <td><img src=@item.ImageUrl style="width:100px; height:70px;" /></td>
            <td><a href="/Classes/BringClass/@item.ClassRoomId" class="btn btn-outline-warning"><i class="fa fa-edit"></i>Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Classes/Index/" class="btn btn-outline-secondary"><i class=" fa fa-mail-reply-all"></i>Geri</a>
