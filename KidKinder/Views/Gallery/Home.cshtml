@using KidKinder.Models.Entities
@model List<Gallery>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Fotograf Deposu</h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <a href="/Gallery/Create/" class="btn btn-outline-success"><i class="fa fa-plus-circle"></i>Yeni Fotograf Ekle</a>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Resim</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><img src="@item.ImageUrl" style="height:180px;width:550px;" /></td>
                                            @if (item.Status == 1)
                                            {
                                                <td>
                                                    <a href="/Gallery/Forward/@item.GalleryID"><i class="btn btn-success">Aktif</i></a>
                                                </td>

                                            }
                                            else
                                            {

                                                <td>
                                                    <a href="/Gallery/Back/@item.GalleryID"><i class="btn btn-danger">Pasif</i></a>
                                                </td>
                                            }

                                        <td><a href="/Gallery/Delete/@item.GalleryID" class="btn btn-outline-danger"><i class="fa fa-edit"></i>Sil</a></td>
                                        </tr>

                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
